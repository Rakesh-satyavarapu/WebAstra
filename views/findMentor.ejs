<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a Mentor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">MentorConnect</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/find-mentor">Find Mentors</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center fw-bold">Find Your Mentor</h1>
        <p class="text-center text-muted">Connect with industry experts who can guide your career journey</p>

        <div class="row">
            <!-- Filters -->
            <div class="col-md-3">
                <div class="card p-3">
                    <h4>Filters</h4>
                    <input type="text" class="form-control mb-3" placeholder="Search mentors">
                    <h5>Expertise</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"> <label class="form-check-label">Agile</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"> <label class="form-check-label">Data Science</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"> <label class="form-check-label">React</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"> <label class="form-check-label">Python</label>
                    </div>
                </div>
            </div>

            <!-- Mentor Cards -->
            <div class="col-md-9">
                <div class="row">
                    <% mentors.forEach(mentor => { %>
                        <div class="col-md-6">
                            <div class="card mb-4 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <img src="<%= mentor.image %>" class="rounded-circle me-3" width="50" height="50" alt="Profile">
                                        <div>
                                            <h5 class="card-title mb-0"><%= mentor.name %></h5>
                                            <small class="text-muted"><%= mentor.title %></small>
                                        </div>
                                    </div>
                                    <p class="mt-2"><strong>Experience:</strong> <%= mentor.experience %></p>
                                    <p>‚≠ê <%= mentor.rating %></p>
                                    <div>
                                        <% mentor.expertise.forEach(skill => { %>
                                            <span class="badge bg-secondary"><%= skill %></span>
                                        <% }) %>
                                    </div>
                                    <button class="btn btn-primary w-100 mt-3">Book Session</button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
